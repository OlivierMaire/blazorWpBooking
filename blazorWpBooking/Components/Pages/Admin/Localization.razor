@page "/admin/localization"
@using blazorWpBooking.Data
@inject blazorWpBooking.Services.LocalizationService LocalizationService
@inject IJSRuntime Js

@rendermode InteractiveServer

<h3>Localization Management</h3>

<div class="mb-3">
    <button class="btn btn-success me-2" @onclick="SeedFromResx">Seed from .resx files</button>
    <button class="btn btn-primary" @onclick="AddNewString">Add New String</button>
</div>


@if (_showAddForm)
{
    <div class="card mt-3">
        <div class="card-header">
            Add New Localization String
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Key</label>
                    <input type="text" class="form-control" @bind="_newKey" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Culture</label>
                    <select class="form-select" @bind="_newCulture">
                        <option value="">Select Culture</option>
                        @foreach (var culture in _availableCultures)
                        {
                            <option value="@culture">@culture</option>
                        }
                        <option value="en-US">en-US</option>
                        <option value="fr-FR">fr-FR</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Value</label>
                    <input type="text" class="form-control" @bind="_newValue" />
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success me-2" @onclick="SaveNewString">Save</button>
                <button class="btn btn-secondary" @onclick="CancelAdd">Cancel</button>
            </div>
        </div>
    </div>
}


@if (_strings.Any())
{
    <div class="mb-3">
        <label class="form-label">Filter by Culture:</label>
        <select class="form-select w-auto" @bind="SelectedCulture">
            <option value="">All Cultures</option>
            @foreach (var culture in _availableCultures)
            {
                <option value="@culture">@culture</option>
            }
        </select>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Key</th>
                <th>Culture</th>
                <th>Value</th>
                <th>Updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var str in _filteredStrings)
            {
                <tr>
                    <td>@str.Key</td>
                    <td>@str.Culture</td>
                    <td>
                        @if (_editingId == str.Id)
                        {
                            <input type="text" class="form-control" @bind="_editingValue" />
                        }
                        else
                        {
                            @str.Value
                        }
                    </td>
                    <td>@(str.UpdatedAt?.ToString("g") ?? str.CreatedAt.ToString("g"))</td>
                    <td>
                        @if (_editingId == str.Id)
                        {
                            <button class="btn btn-sm btn-success me-1" @onclick="SaveEdit">Save</button>
                            <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">Cancel</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-primary me-1" @onclick="() => StartEdit(str)">Edit</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteString(str.Id)">Delete</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No localization strings found. Click "Seed from .resx files" to import existing strings.
    </div>
}

@code {
    private List<LocalizationString> _strings = new();
    private List<LocalizationString> _filteredStrings = new();
    private List<string> _availableCultures = new();
    private string _selectedCulture = "";
    private string SelectedCulture
    {
        get => _selectedCulture;
        set
        {
            _selectedCulture = value;
            FilterStrings();
        }
    }
    private int _editingId = 0;
    private string _editingValue = "";
    private bool _showAddForm = false;
    private string _newKey = "";
    private string _newCulture = "";
    private string _newValue = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _strings = await LocalizationService.GetAllStringsAsync();
        _availableCultures = await LocalizationService.GetAvailableCulturesAsync();
        FilterStrings();
    }

    private void FilterStrings()
    {
        if (string.IsNullOrEmpty(_selectedCulture))
        {
            _filteredStrings = _strings;
        }
        else
        {
            _filteredStrings = _strings.Where(s => s.Culture == _selectedCulture).ToList();
        }
    }

    private void StartEdit(LocalizationString str)
    {
        _editingId = str.Id;
        _editingValue = str.Value;
    }

    private async Task SaveEdit()
    {
        if (_editingId > 0)
        {
            var str = _strings.FirstOrDefault(s => s.Id == _editingId);
            if (str != null)
            {
                str.Value = _editingValue;
                str.UpdatedAt = DateTime.UtcNow;
                await LocalizationService.AddOrUpdateStringAsync(str.Culture, str.Key, str.Value);
                _editingId = 0;
                _editingValue = "";
                await LoadData();
            }
        }
    }

    private void CancelEdit()
    {
        _editingId = 0;
        _editingValue = "";
    }

    private async Task DeleteString(int id)
    {
        if (await Js.InvokeAsync<bool>("confirm", "Are you sure you want to delete this localization string?"))
        {
            await LocalizationService.DeleteStringAsync(id);
            await LoadData();
        }
    }

    private void AddNewString()
    {
        _showAddForm = true;
        _newKey = "";
        _newCulture = "";
        _newValue = "";
    }

    private async Task SaveNewString()
    {
        if (!string.IsNullOrWhiteSpace(_newKey) && !string.IsNullOrWhiteSpace(_newCulture) && !string.IsNullOrWhiteSpace(_newValue))
        {
            await LocalizationService.AddOrUpdateStringAsync(_newCulture, _newKey, _newValue);
            _showAddForm = false;
            await LoadData();
        }
    }

    private void CancelAdd()
    {
        _showAddForm = false;
    }

    private async Task SeedFromResx()
    {
        await LocalizationService.SeedFromResxAsync();
        await LoadData();
    }
}